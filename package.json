{
  "name": "rn-profiler-ai",
  "displayName": "React Native Profiler AI",
  "description": "VS Code extension for React Native performance profiling with AI analysis",
  "version": "0.1.0",
  "publisher": "rn-profiler-ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/zsolt-devnoir/react-native-cursor-profiler.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rnProfilerAI.showProfilerPanel",
        "title": "RN Profiler AI: Show Profiler Panel",
        "category": "RN Profiler AI"
      },
      {
        "command": "rnProfilerAI.startRecording",
        "title": "RN Profiler AI: Start Recording",
        "category": "RN Profiler AI"
      },
      {
        "command": "rnProfilerAI.stopRecording",
        "title": "RN Profiler AI: Stop Recording",
        "category": "RN Profiler AI"
      },
      {
        "command": "rnProfilerAI.analyzeLogs",
        "title": "RN Profiler AI: Analyze Logs",
        "category": "RN Profiler AI"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "rnProfilerAI.showProfilerPanel",
          "when": "true"
        },
        {
          "command": "rnProfilerAI.startRecording",
          "when": "true"
        },
        {
          "command": "rnProfilerAI.stopRecording",
          "when": "true"
        },
        {
          "command": "rnProfilerAI.analyzeLogs",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "RN Profiler AI",
      "properties": {
        "rnProfilerAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI, Anthropic, or Cursor (stored securely). Optional for Cursor if using built-in AI.",
          "scope": "application"
        },
        "rnProfilerAI.apiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "cursor"
          ],
          "default": "openai",
          "description": "AI API provider to use. Use 'cursor' when running in Cursor editor to leverage Cursor's built-in AI.",
          "scope": "application"
        },
        "rnProfilerAI.serverPort": {
          "type": "number",
          "default": 1337,
          "description": "Local HTTP server port for receiving profiling data",
          "scope": "application"
        },
        "rnProfilerAI.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze logs after stopping recording",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@types/express": "^4.17.21",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "prettier": "^3.7.4"
  }
}
